{% block body %}

	<div class="comment-modal"></div>

	<!-- Modal -->
	<div class="modal fade" id="modal-comment" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
		<div class="modal-dialog modal-dialog-scrollable" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalScrollableTitle">Commentaires</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">

					{% for comment in comments %}
						<span>
							{{ comment.user }}</span>
						<br>
						{{ comment.comment }}

		
							{% if is_granted('view', comment) %}
								<a href="{{ path('comment_update',{'id': comment.id}) }}">
									<img src="{{ asset('assets/images/update.png') }}" alt="update" class="button-icon">
									update
								</a>
							{% endif %}
			
						<br>
						<hr>
					{% endfor %}


				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
